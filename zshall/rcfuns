    if [ -d ~/SCRATCH/shortlive/ ] ; then
        short=~/SCRATCH/shortlive ; : ~short
    fi
    if [ -d ~/SCRATCH/internet/download/ ] ; then
        download=~/SCRATCH/internet/download/ ; : ~download
    fi
    : ~scratch
fi


